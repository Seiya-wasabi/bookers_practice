<main>
  <body>
    <h1><strong>Books</strong></h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |b| %>
        <tr>
          <td><%= b.title%></td>
          <td><%= b.body%></td>
          <td><%= link_to "Show", home_path(b.id) %></td>
          <td><%= link_to "Edit", edit_home_path(b.id) %></td>
          <td><%= link_to "Destroy", destroy_path(b.id), method: :delete, "date-connfirm" => "ホンマに消すんかいな..." %></td>
        </tr>
      </tbody>
        <% end %>
        
    </table>
    
    <div class= "new_book">
      <%= form_with model:@book, url:"/homes", local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title%>
      <h4>Body</h4>
      <%= f.text_area :body%>
      <%= f.submit "Create Book" %>
      <% end %>
    </div>
    
  </body>
</main>